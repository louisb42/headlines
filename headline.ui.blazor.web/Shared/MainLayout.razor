@inherits LayoutComponentBase
@inject NavigationManager _navManager

<MudThemeProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar Elevation="0" Color="@Color.Transparent" >
        <MudSpacer />
        @if (_navManager.Uri.Contains("headlinemaintenance"))
        {
            <MudIconButton Icon="@Icons.Material.Filled.Preview" Color="Color.Inherit" Link="/headlinepresentation" Edge="Edge.End" />
        }
        else
        {
            <MudIconButton Icon="@Icons.Material.Filled.Close" Color="Color.Inherit" Link="/headlinemaintenance" Edge="Edge.End" />
        }
    </MudAppBar>
    <MudMainContent>
        <MudContainer Style="height:90vh;" MaxWidth="MaxWidth.False">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>

